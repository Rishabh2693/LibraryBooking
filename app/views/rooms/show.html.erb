<p id="notice"><%= notice %></p>

<p>
  <strong>Room number:</strong>
  <%= @room.room_number %>
</p>

<p>
  <strong>Size:</strong>
  <%= @room.size %>
</p>

<p>
  <strong>Building:</strong>
  <%= @room.building %>
</p>

<% if current_user.admin? and @room.has_attribute?(:email) and @room.email %>
<p>
  <strong>Currently booked by Library Member:</strong>
  <%= @room.email %>
</p>
<% end %>

<%= link_to 'Edit', edit_room_path(@room) %> |
