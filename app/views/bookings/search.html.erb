<h1> Search for available rooms</h1>
<%= form_tag bookings_search_path, :method => 'get' do %>

    <div class="field">
      <%= label_tag :"start time" %>
      <% if defined?(@search_start_time) %>
          <%=select_datetime(@search_start_time, :discard_minute => true, :prefix => :start_time) %>
      <% else %>
        <%=select_datetime(Time.now, :discard_minute => true, :prefix => :start_time) %>
      <% end %>
      <%= label_tag :"end time" %>
      <% if defined?(@search_end_time) %>
          <%=select_datetime(@search_end_time, :discard_minute => true, :prefix => :end_time) %>
      <% else %>
          <%=select_datetime(Time.now, :discard_minute => true, :prefix => :end_time) %>
      <% end %>
    </div>
    <%= submit_tag "Search" %>
<% end %>

<p id="notice"><%= notice %></p>
<%if not defined?(@rooms) or @rooms.empty? %>
    <p>There are no rooms.</p>
<%else%>
<h1>Rooms</h1>

<table>
  <thead>
  <tr>
    <th>Room number</th>
    <th>Size</th>
    <th>Building</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.size %></td>
        <td><%= room.building %></td>
        <td><%= link_to 'Book',new_booking_path(:room => room, :start_time => @search_start_time, :end_time => @search_end_time) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<br>




<%= link_to 'Back', bookings_path %>
