<% provide(:title, 'Sign up') %>
<% provide(:button_text, 'Create my account') %>
<% if not logged_in? %>
  <h1>Sign up</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form' %>
    </div>
  </div>
<% else %>
    <center><h3>Looks like you are already logged in, please log out first to sign up!</h3>
      </center>
<% end %>